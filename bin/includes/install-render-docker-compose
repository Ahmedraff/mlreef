#!/bin/bash

# rewrite docker compose file:
sed "s/:develop/:$VERSION/" < docker-compose.yml > docker-compose.local.yml
if [ "$INSTANCE" != "localhost" ]; then
  # Activate (uncomment) specific lines in the docker-compose file
  sed -i "s~#CI_ACTIVATE~~"                                       docker-compose.local.yml
  # remove tagged lines in the docker-compose file
  sed -i "/#CI_DELETE_LINE/d"                                     docker-compose.local.yml
fi
cat docker-compose.local.yml